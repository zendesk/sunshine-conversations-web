{
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            2,
            4,
            {"SwitchCase": 1}
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true,
        "browser": true,
        "mocha": true
    },
    "globals": {
        "expect": true,
        "VERSION": true
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "extends": "eslint:recommended"
}
